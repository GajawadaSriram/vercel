{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/Frontend/dist/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}


